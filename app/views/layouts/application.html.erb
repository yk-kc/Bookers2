<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://kit.fontawesome.com/6fe097079a.js" crossorigin="anonymous"></script>
  </head>


  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
        <a class="navbar-brand" href="/">Bookers</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li class="nav-item">
              <%= link_to user_path(current_user), class: 'nav-link text-light' do %>
                <i class="fas fa-home"></i> Home
                <% end %>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="/users"><i class="fas fa-users"></i> Users</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="/books"><i class="fas fa-book-open"></i> Books</a>
              </li>
              <li class="nav-item">
                <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light' do %>
                <i class="fas fa-sign-out-alt"></i> Log out
                <% end %>
              </li>
              <% else %>
              <li class="nav-item">
                <a class="nav-link text-light" href="/"><i class="fas fa-home"></i> Home<span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="/home/about"><i class="fas fa-link"></i> About</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="/users/sign_up"><i class="fas fa-user-plus"></i> Sign up</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-light" href="/users/sign_in"><i class="fas fa-sign-in-alt"></i> Log in</a>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>

    </header>
    <main>
      <p><%= flash[:notice] %></p>
      <div class="d-flex justify-content-center mb-2">
        <%= render 'searches/form' %>
      </div>
      <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

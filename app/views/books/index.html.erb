<p><%= flash[:notice] %></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag 'default-image.jpg' %>
      <table class="table">
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <th>introduction</th>
        <th><% @introduction %></th>
      </table>
      <div class="row">
        <a class="btn btn-outline-secondary btn-block" href="/users/:id/edit"><i class="fas fa-user-cog"></i></a>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book do |f| %>
      <label for="book_title">Title</label>
      <div class="form-group">
        <%= f.text_field :title %>
      </div>

      <label for="book_opinion">Opinion</label>
      <div class="form-group">
        <%= f.text_area :body %>
      </div>

      <div class="action">
        <%= f.submit "Create Book", class: 'btn btn-success' %>
      </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag 'default-image.jpg' %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </div>
</div>